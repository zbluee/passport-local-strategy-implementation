<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="text-center">Register</h1>
  
  <%- include('partials/notifyAlerts') %>
   
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <sup class="required">*</sup>
              <div class="form-input">
                <span class="icon"><i class="fa fa-user"></i></span>
                <input type="email" class="form-control" name="username" required>
              </div>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <sup class="required">*</sup>
              <div class="form-input">
                <span class="icon"><i class="fa fa-lock"></i></span>
                <input id="password" type="password" class="form-control" name="password" required>
                <span  class="icon-toggle"><i id="togglepassword" class="fa fa-eye-slash"></i></span>
              </div>
              <small>Use 8 or more characters with a mix of letters, numbers & symbols</small>
            </div>
            <div class="form-group">
              <label for="password-confirmation">Confirm Password</label>
              <sup class="required">*</sup>
              <div class="form-input">
                <span class="icon"><i class="fa fa-lock"></i></span>
                <input id="passwordconfirm" type="password" class="form-control" name="passwordConfirmation" required>
                <span class="icon-toggle"><i id="togglepasswordconfirm" class="fa fa-eye-slash"></i></span>
              </div>
            </div>
            <div class="row">
              <div class="col-sm">
                <button type="submit" class="btn btn-dark">Register</button>
              </div>
        

            </div>
          </div>
          </form>

        </div>
      </div>
    </div>

    

  </div>
</div>
<script src="scripts/toggle.js" ></script>
<%- include('partials/header') %>
